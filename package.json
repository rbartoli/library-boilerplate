{
  "name": "library-boilerplate",
  "version": "0.1.0",
  "description": "A boilerplate to start a library using ES2015.",
  "main": "lib/index.js",
  "scripts": {
    "build": "babel src --out-dir lib",
    "build:umd": "webpack src/index.js dist/library.js",
    "build:umd:min": "cross-env NODE_ENV=production webpack src/index.js dist/library.min.js",
    "clean": "rimraf coverage dist lib",
    "lint": "eslint src test example",
    "prepublish": "npm run lint && npm run test && npm run clean && npm run build && npm run build:umd && npm run build:umd:min",
    "test": "cross-env NODE_ENV=test mocha --compilers js:babel-register --recursive  --require ./test/setup.js",
    "test:coverage": "babel-node node_modules/.bin/isparta cover node_modules/.bin/_mocha --root src/ --report text",
    "test:watch": "npm test -- --watch"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rbartoli/library-boilerplate.git"
  },
  "keywords": [
    "library"
  ],
  "author": {
    "name": "Riccardo Bartoli",
    "email": "info@rblab.com",
    "url": "http://rblab.com"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rbartoli/library-boilerplate/issues"
  },
  "homepage": "https://github.com/rbartoli/library-boilerplate",
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-core": "^6.9.1",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.2.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.5.0",
    "babel-register": "^6.9.0",
    "canvas": "^1.3.16",
    "chai": "^3.5.0",
    "cross-env": "^1.0.7",
    "eslint": "^2.13.0",
    "eslint-plugin-import": "^1.9.0",
    "isparta": "^4.0.0",
    "jsdom": "^9.2.1",
    "mocha": "^2.2.5",
    "rimraf": "^2.5.2",
    "webpack": "^1.13.0"
  }
}
